# Backend Environment Configuration
# SECURITY: Never commit this file with real credentials
# Copy this file to .env and fill in the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=whois_it

# Email Configuration (optional - if not set, emails will be logged to console)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@whoisit.com

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# JWT Secret - CRITICAL: Change this to a strong random key in production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key
